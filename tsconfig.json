{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowJs": false,
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "types": ["react", "vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@constants/*": ["constants/*"],
      "@typings/*": ["typings/*"],
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@mocks/*": ["mocks/*"],
      "@recoil/*": ["recoil/*"]
    }
  },
  "include": ["src", "src/react-star-ratings.d.ts"]
}
